 "html": "    \r\n    <style>\r\n    body {\r\n        margin: 0;\r\n        padding: 0;\r\n    }\r\n    table {\r\n        width: 100%;\r\n        height: 100%;\r\n        border-collapse: collapse;\r\n    }\r\n    th, td, tr {\r\n        border: 1px solid black;\r\n        text-align: left;\r\n        padding: 5px;\r\n    }\r\n    div.relative {\r\n        position: relative;\r\n        width: 1200px;\r\n        height: 200px;\r\n    } \r\n\r\n    div.absolute {\r\n        position: absolute;\r\n        top: 100px;\r\n        right: -10px;\r\n        margin-top: 10px;\r\n        width: 400px;\r\n        height: 100px;\r\n        border: 1px solid;\r\n    }\r\n    </style>\r\n        <h1 style=\"text-align: center; \"><b>PURCHASE ORDER</b></h1>\r\n            <table style=\"width: 100%;\">\r\n                <tr>\r\n                    <td rowspan=\"4\" style=\"width:20%\">Invoice To</td>\r\n                    <td style=\"width:15%\">Voucher No.</td>\r\n                    <td style=\"width:15%\">Dated<br><b>{{ doc.transaction_date }}</b></td>\r\n                </tr>\r\n                <tr>\r\n                    <td>Delivery Note </td>\r\n                    <td>Payment Terms</td>\r\n                </tr>\r\n                <tr>\r\n                    <td style=\"width:15%\">Reference No. & Date</td>\r\n                    <td style=\"width:15%\">Other Reference</td>\r\n                </tr>\r\n                <tr>\r\n                    <td>Dispatch Through</td>\r\n                    <td>Destination</td>\r\n                </tr>\r\n                <tr>\r\n                    <td rowspan=\"4\" style=\"width:30%; height:50%\">Supplier<br><b>{{ doc.supplier}}</b></td>\r\n                </tr>\r\n                <tr>\r\n                    <td colspan=\"2\" style=\"width:30%; height:50%\"> Terms of Delivery<br><b>{{ doc.tc_name }}</b></td>\r\n                </tr>\r\n            </table>\r\n            <table>\r\n                <tr>\r\n                    <th style=\"width:5%\">Sr No.</th>\r\n                    <th style=\"width:30%\">Description of Goods</th>\r\n                    <th style=\"width:20%\">Due on</th>\r\n                    <th style=\"width:10%\">Quantity</th>\r\n                    <th style=\"width:10%\">Rate</th>\r\n                    <th style=\"width:9%\">Per</th>\r\n                    <th style=\"width:9.4%\">Disc. %</th>\r\n                    <th style=\"width:7.4%\">Amount</th>\r\n                </tr>\r\n                {% for row in doc.items %}\r\n                <tr>\r\n                    <td style=\"width:5%\">{{ row.idx or '' }}</td>\r\n                    <td style=\"width:30%\">{{ row.item_name or '' }} {{ row.Description or '' }}</td>\r\n                    <td style=\"width:20%\">{{ row.schedule_date or ''}}</td>\r\n                    <td style=\"width:10%\">{{ row.get_formatted('qty') or '' }}</td>\r\n                    <td style=\"width:10%\">{{ row.rate or '' }}</td>\r\n                    <td style=\"width:9%\">{{ row.uom or '' }}</td>\r\n                    <td style=\"width:9.4%\">{{ row.discount_amount or '' }}</td>\r\n                    <td style=\"width:7.4%\">{{row.get_formatted('amount') or 0}}</td>\r\n                </tr>\r\n                {% endfor %}\r\n                <tr>\r\n                    <td style=\"width:5%\"></td>\r\n                    <td style=\"width:30%\"></td>\r\n                    <td style=\"width:20%\"><b>Total</b></td>\r\n                    <td style=\"width:10%\"><b>{{ doc.total_qty }}</b></td>\r\n                    <td style=\"width:10%\"></td>\r\n                    <td style=\"width:9%\"></td>\r\n                    <td style=\"width:9.4%\"></td>\r\n                    <td style=\"width:7.4%\"><b>{{ doc.get_formatted('net_total') or ''}}</b></td>\r\n                </tr>\r\n            </table>\r\n            <table>\r\n                <tr>\r\n                    <td>\r\n                        <div class=\"relative\">\r\n                            <p style=\"text-align:left;\">Amount Chargeable(in words)<br><b>{{ doc.base_in_words}}</b><span style=\"float:right;\">E & O.E</span></p>\r\n                            <div class=\"absolute\">\r\n                                <p style=\"text-align:right;\">for Gst with Tally</p>\r\n                                <p style=\"float:right; margin-top:50px;\">Authorised Signatory</p>\r\n                            </div>\r\n                        </div>\r\n                    </td>\r\n                </tr>\r\n            </table>\r\n",
